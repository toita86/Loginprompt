<h2>Search Users</h2>
<form action="/users" method="GET">
    <label>Names</label>
    <input type="text" name="name" value="<%= searchOption.name %>">
    <button type="submit">Search</button>
</form>

<br>

<% users.forEach(user =>{ %>
    <% if(searchOption.name != null){ %>
        <body style="background-color: <%= user.color %>">
        <div><%= user.name %></div>
        <div><%= user.color %></div>
        <a href="/users/<%= user.id%>">View</a>
        <a href="/users/<%= user.id%>/edit">Edit</a>
        <br>
        <%- include('../partials/deleteForm', {url:`/users/${user.id}`})%>
        </body>
    <%}else{%>
        <div><%= user.name %></div>
        <div><%= user.color %></div>
        <a href="/users/<%= user.id%>">View</a>
        <a href="/users/<%= user.id%>/edit">Edit</a>
        <br>
        <%- include('../partials/deleteForm', {url:`/users/${user.id}`})%>
    <%}%>
<% }) %>